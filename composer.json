{
    "name": "digifactory/laravel-svg-fixer-middleware",
    "description": "Fixes your uploaded SVG files before validating through the Laravel validator",
    "keywords": [
        "digifactory",
        "laravel-svg-fixer-middleware",
        "laravel",
        "middleware",
        "svg"
    ],
    "homepage": "https://github.com/digifactory/laravel-svg-fixer-middleware",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Maurice Bosch",
            "email": "maurice@digifactory.nl",
            "role": "Developer"
        },
        {
            "name": "Mark Jansen",
            "email": "mark@digifactory.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2|^8.1",
        "illuminate/support": "^9.0",
        "illuminate/http": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.1",
        "phpunit/phpunit": "^9.3",
        "illuminate/validation": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "DigiFactory\\SvgFixer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigiFactory\\SvgFixer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
