{
    "name": "digifactory/laravel-svg-fixer-middleware",
    "description": "Fixes your uploaded SVG files before validating through the common Laravel validation",
    "keywords": [
        "digifactory",
        "laravel-svg-fixer-middleware"
    ],
    "homepage": "https://github.com/digifactory/laravel-svg-fixer-middleware",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "DigiFactory Webworks",
            "email": "helpdesk@digifactory.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "illuminate/support": "^6.0",
        "illuminate/http": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0",
        "illuminate/validation": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "DigiFactory\\SvgFixer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigiFactory\\SvgFixer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DigiFactory\\SvgFixer\\SvgFixerServiceProvider"
            ]
        }
    }
}
